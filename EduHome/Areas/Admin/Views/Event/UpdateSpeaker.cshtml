
@model Speaker

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Fullname" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Fullname"><br />
                    <span asp-validation-for="Fullname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Responsibility" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Responsibility"><br />
                    <span asp-validation-for="Responsibility"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-success ml-4">Update</button>
        </form>
    </div>
</div>

