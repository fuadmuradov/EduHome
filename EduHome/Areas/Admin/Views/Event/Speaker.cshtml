@model List<Speaker>

<div class="body-content">
    <div class="container">
        <div class="row justify-content-center">
            <a class="btn btn-success-soft" asp-area="Admin" asp-action="CreateSpeaker" asp-controller="Event" style="width:800px">Add Speaker</a>
        </div>
        <div class="row justify-content-center">

            @foreach (var item in Model)
            {
                <div class="card mr-2 ml-2" style="width: 17rem;">
                    <div class="mt-2" style="width:200px; height:150px">
                        <img src="~/img/event/@item.İmage" class="card-img-top" alt="Course Image">
                    </div>
                    <div class="card-body center-block mt-2">
                        <div>
                            <h5 class="card-title"> <strong>@item.Fullname</strong> </h5>

                            <h6>@item.Responsibility</h6>
                        </div>
                        <a asp-area="Admin" asp-controller="Event" asp-action="DeleteSpeaker" asp-route-id="@item.id" class="btn btn-danger-soft btn-sm" onclick="return confirm('Are you sure you want to delete?')"><i class="far fa-trash-alt"></i></a>
                        <a asp-area="Admin" asp-controller="Event" asp-action="UpdateSpeaker" asp-route-id="@item.id" class="btn btn-success-soft btn-sm ml-1"><i class="far fa-edit"></i></a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>