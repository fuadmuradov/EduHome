@model Testimional
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card center-block mb-5" style="width:50rem;">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Fullname" class="font-weight-600"></label>
                            <input asp-for="@Model.Fullname" class="form-control" id="exampleFormControlInput1" placeholder="Slider Title">
                            <span asp-validation-for="Fullname">  </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Responsibility" class="font-weight-600"></label>
                            <input asp-for="@Model.Responsibility" class="form-control" id="exampleFormControlInput1" placeholder="Slider Description">
                            <span asp-validation-for="Responsibility">  </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Description" class="font-weight-600"></label>
                            <input asp-for="@Model.Description" class="form-control" id="exampleFormControlInput1" placeholder="Slider Description">
                            <span asp-validation-for="Description">  </span>
                        </div>
                        <div>
                            <img src="~/img/testimonial/@Model.Image" alt="about" style="width:150px; height:120px" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Photo" class="font-weight-600"></label>
                            <input asp-for="@Model.Photo" class="form-control" id="exampleFormControlInput1" placeholder="Slider Description">
                            <span asp-validation-for="Photo">  </span>
                        </div>
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to Update?')">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

