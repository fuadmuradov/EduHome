@model Teacher


<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Name"><br />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Surname"><br />
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Job"><br />
                    <span asp-validation-for="Job"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About" class="font-weight-600"></label>
                    <textarea asp-for="About" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="About"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Degree" class="font-weight-600"></label>
                    <textarea asp-for="Degree" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Degree"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Experience" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Experience"><br />
                    <span asp-validation-for="Experience"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo"></span>
                </div>
                    </div>
            <button type="submit" class="btn btn-success ml-4">Next</button>
        </form>
    </div>
</div>



