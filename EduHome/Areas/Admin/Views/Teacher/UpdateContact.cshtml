@model Contact

<h6>Add Teacher's Contact Information</h6>

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Mail" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Mail"><br />
                    <span asp-validation-for="Mail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Phone"><br />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkypeName" class="font-weight-600"></label>
                    <input class="form-control" asp-for="SkypeName"><br />
                    <span asp-validation-for="SkypeName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkypeUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="SkypeUrl"><br />
                    <span asp-validation-for="SkypeUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="FacebookUrl"><br />
                    <span asp-validation-for="FacebookUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PinterestUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="PinterestUrl"><br />
                    <span asp-validation-for="PinterestUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="TwitterUrl"><br />
                    <span asp-validation-for="TwitterUrl"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Update</button>
        </form>
    </div>
</div>




