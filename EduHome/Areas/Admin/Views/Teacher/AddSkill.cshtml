@model Skill


<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Language" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Language"><br />
                    <span asp-validation-for="Language"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Leader" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Leader"><br />
                    <span asp-validation-for="Leader"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Development" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Development"><br />
                    <span asp-validation-for="Development"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Design" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Design"><br />
                    <span asp-validation-for="Design"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Innovation" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Innovation"><br />
                    <span asp-validation-for="Innovation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Communication" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Communication"><br />
                    <span asp-validation-for="Communication"></span>
                </div>

                <select asp-for="TeacherId" class="form-select" asp-items="@(new SelectList(ViewBag.Teachers, "id", "Name"))">
                    <option value="null">Categories</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success ml-4">Create</button>
        </form>
    </div>
</div>

