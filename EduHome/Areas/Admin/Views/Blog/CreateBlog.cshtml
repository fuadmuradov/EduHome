
@model Blog

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Title"><br />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Description"><br />
                    <span asp-validation-for="Description"></span>
                </div>
             
                <div class="form-group">
                    <label asp-for="Writer" class="font-weight-600"></label>
                    <textarea asp-for="Writer" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Writer"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Date"><br />
                    <span asp-validation-for="Date"></span>
                </div>
             
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-success ml-4">Create</button>
        </form>
    </div>
</div>

