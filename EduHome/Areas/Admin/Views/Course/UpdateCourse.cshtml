@model Course

<div class="container">
    <div class="card center-block mb-5" style="width:50rem;">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-600"></label>
                        <input class="form-control" asp-for="Name"><br />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="font-weight-600"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="About" class="font-weight-600"></label>
                        <textarea asp-for="About" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="About"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apply" class="font-weight-600"></label>
                        <textarea asp-for="Apply" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Apply"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Certification" class="font-weight-600"></label>
                        <textarea asp-for="Certification" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Certification"></span>
                    </div>
                    <div>
                        <img src="~/img/course/@Model.Image" alt="about" style="width:320px; height:250px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo" class="font-weight-600"></label>
                        <input asp-for="Photo" class="form-control" />
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "id", "Name"))">
                        <option value="null">Categories</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success ml-4">Create</button>
            </form>
        </div>
    </div>
</div>