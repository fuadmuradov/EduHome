@model CourseFeature

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="StartDate" class="font-weight-600"></label>
                    <input class="form-control" asp-for="StartDate"><br />
                    <span asp-validation-for="StartDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Duration"><br />
                    <span asp-validation-for="Duration"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassDuration" class="font-weight-600"></label>
                    <input class="form-control" asp-for="ClassDuration"><br />
                    <span asp-validation-for="ClassDuration"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SkilLevel" class="font-weight-600"></label>
                    <input class="form-control" asp-for="SkilLevel"><br />
                    <span asp-validation-for="SkilLevel"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Language" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Language"><br />
                    <span asp-validation-for="Language"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentCount" class="font-weight-600"></label>
                    <input class="form-control" asp-for="StudentCount"><br />
                    <span asp-validation-for="StudentCount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assesment" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Assesment"><br />
                    <span asp-validation-for="Assesment"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Price"><br />
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group" style="display:none">
                  
                    <input class="form-control hide" asp-for="id"><br />
                   
                </div>
                <div class="form-group"style="display:none">
                 
                    <input class="form-control hide" asp-for="CourseId"><br />
                 
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Update</button>
        </form>
    </div>
</div>

