
@model AboutVM 

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.About.Title</h2>
                    <p>@Model.About.Description</p>
                    <a class="default-btn" href="#">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.About.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">

            @for (int i = 0; i < 4; i++)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="TeacherDetails" asp-route-id="@Model.Teachers[i].id"><img src="~/img/teacher/@Model.Teachers[i].Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="TeacherDetails" asp-route-id="@Model.Teachers[i].id">@Model.Teachers[i].Name @Model.Teachers[i].Surname</a></h2>
                            <h4>@Model.Teachers[i].Job</h4>
                            <ul>
                                <li><a href="@Model.Teachers[i].Contacts.FirstOrDefault(x=>x.TeacherId==Model.Teachers[i].id).FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@Model.Teachers[i].Contacts.FirstOrDefault(x=>x.TeacherId==Model.Teachers[i].id).PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@Model.Teachers[i].Contacts.FirstOrDefault(x=>x.TeacherId==Model.Teachers[i].id).SkypeUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@Model.Teachers[i].Contacts.FirstOrDefault(x=>x.TeacherId==Model.Teachers[i].id).TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/img/testimonial/@Model.Testimional.Image" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@Model.Testimional.Description</p>
                                <h4>@Model.Testimional.Fullname</h4>
                                <h5>@Model.Testimional.Responsibility</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="https://www.youtube.com/watch?v=to6Ghf8UL7o">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        <div class="single-notice-left mb-23 pb-20">

                            @foreach (var item in Model.Notices)
                            {
                                <div class="single-notice-left mb-25 pb-25">
                                    <h4>@item.Title</h4>
                                    <p>@item.Description </p>
                                </div>
                            }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->